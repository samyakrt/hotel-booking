{
  "name": "hotel-booking",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "runner": "ts-node -r tsconfig-paths/register",
    "start:ui:watch": "cd ui; yarn start --watch",
    "start:dev": "concurrently --kill-all --handle-input \"nodemon\" \"yarn start:ui:watch\" \"yarn start:tw:watch\"",
    "build:server": "yarn runner ./src/build.ts",
    "build:ui": "NODE_ENV=production cd ui; yarn start",
    "start:tw": "tailwindcss -i src/assets/css/style.css -o src/public/css/style.css",
    "start:tw:watch": "yarn start:tw --watch",
    "build": "npm-run-all build:* -s",
    "lint": "eslint . --ext .ts"
  },
  "nodemonConfig": {
    "ext": "ts",
    "watch": [
      "src"
    ],
    "exec": "ts-node --files -r tsconfig-paths/register ./src/index.ts"
  },
  "_moduleAliases": {
    "@": "dist/"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "@types/express": "^4.17.14",
    "@types/fs-extra": "^9.0.13",
    "@types/hbs": "^4.0.1",
    "@types/http-status-codes": "^1.2.0",
    "@types/mongoose": "^5.11.97",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "concurrently": "^7.5.0",
    "eslint": "^8.26.0",
    "eslint-plugin-react": "^7.32.2",
    "fs-extra": "^10.1.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.17",
    "@types/cookie-session": "^2.0.44",
    "@types/cors": "^2.8.12",
    "@types/node": "^18.11.9",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "deep-cleaner": "^2.0.0-alpha.3",
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "hbs": "^4.2.0",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongoose": "^6.7.1",
    "tailwindcss": "^3.2.1"
  }
}
